COPY ./econfigs ./econfigs
COPY ./proto  ./proto
COPY ./src ./src
COPY ./pys ./pys
COPY ./auto_gen_code.sh ./auto_gen_code.sh


#ENTRYPOINT [ "tail" ,"-f", "/dev/null" ] 
