RUN ["apt" ,"update"]
RUN ["apt", "install", "-y", "protobuf-compiler"]
RUN ["apt", "install", "-y", "protobuf-compiler-grpc"]
RUN ["apt", "install", "-y",  "python3", "python3-pip"]
RUN ["pip", "install", "kazoo" , "xlrd==1.2.0" ,"argparse"]
#RUN mkdir /var/output

