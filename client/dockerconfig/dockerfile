FROM ubuntu

COPY . /game/battle

WORKDIR /game/battle

ENV HOST_ADDRESS=127.0.0.1
ENV LISTEN_ADDRESS=127.0.0.1
ENV HOST_PORT=1600
ENV LISTEN_PORT=2100
ENV BATTLE_ID=1000
ENV ZK_ROOT=/battle
ENV ZK_LOGIN_ROOT=/login 
ENV ZK_EXCEL_ROOT=/configs
ENV MAX_PLAYER=1000
ENV ZK_MATCH_ROOT=/match
ENV ZK_SERVER=127.0.0.1:2181
ENV KAFKA_SERVER=127.0.0.1:9092
ENV MAP_ID=1

EXPOSE 2100 1600


ENTRYPOINT [ "sh","enterpoint.sh" ]

